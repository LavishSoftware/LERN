{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "elements": [
        {
            "type": "window",
            "title": "ComboBox Example 1",
            "name": "combobox-1.window",
            "width": 500,
            "content": {
                "type": "stackpanel",
                "horizontalContentAlignment": "left",
                "children": [
                    "People",
                    {
                        "type": "combobox",
                        "name": "editor.combobox",
                        "horizontalAlignment": "stretch",
                        "items": [
                            {
                                "type":"textblock",
                                "text":"John"
                            },
                            {
                                "type":"textblock",
                                "text":"Jane"
                            }
                        ],
                        "eventHandlers": {
                            "onSelectionChanged": {
                                "type": "method",
                                "object": "ComboBox1Controller",
                                "method": "OnSelectionChanged"
                            }
                        }
                    }
                ]
            }
        }
    ]
}