{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "elements": [
        {
            "type": "window",
            "title": "Checkbox Example 1",
            "name": "checkbox-1.window",
            "content": {
                "type": "checkbox",
                "content":{
                    "type":"textblock",
                    "text":"Toggle me!"
                },
                "eventHandlers": {
                    "onChecked":{
                        "type":"code",
                        "code":"echo Checked!"
                    },
                    "onUnchecked":{
                        "type":"code",
                        "code":"echo Unchecked!"
                    }
                }
            }
        }
    ]
}