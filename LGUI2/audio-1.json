{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "audioVoices": {
        "ui sound": {}
    },
    "audioStreams": {
        "crowd-claps": {
            "filename": "../Assets/Audio/crowd-claps.wav"
        }
    },
    "elements": [
        {
            "type": "window",
            "title": "LGUI2 Audio Example",
            "name": "audio-1.window",
            "minSize": [200,60],
            "content": {
                "type": "button",
                "content": "Stop and Play",
                "eventHandlers": {
                    "onPress": {
                        "type": "audio",
                        "streamName": "crowd-claps",
                        "voiceName": "ui sound"
                    }
                }
            }
        }
    ]
}